{
  "name": "kfzfacpro",
  "version": "2.0.0",
  "author": "Flammang Yves",
  "description": "Rechnungs- und Auftragssystem fÃ¼r Lackiererei mit Login-System",
  "main": "electron-main.js",
  "homepage": "./",
  "scripts": {
    "electron": "electron .",
    "electron-dev": "NODE_ENV=development electron .",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "dist": "electron-builder",
    "setup": "node scripts/setup.js",
    "backup": "node scripts/backup.js",
    "reset-db": "node scripts/setup.js --reset",
    "setup-reset": "node scripts/complete-setup.js --reset",
    "debug-db": "node scripts/debug-db.js"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "connect-sqlite3": "^0.9.13",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-session": "^1.17.3",
    "helmet": "^7.0.0",
    "multer": "^2.0.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "electron": "^37.2.3",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "build": {
    "appId": "com.meinefirma.kfzfacpro",
    "productName": "Meine Firma - KFZ Fac Pro - Rechnungssystem",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/sqlite3/**/*",
      "node_modules/express/**/*",
      "node_modules/cors/**/*",
      "node_modules/helmet/**/*",
      "node_modules/compression/**/*",
      "node_modules/express-rate-limit/**/*",
      "node_modules/multer/**/*",
      "node_modules/express-session/**/*",
      "node_modules/connect-sqlite3/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico",
      "verifyUpdateCodeSignature": false,
      "forceCodeSigning": false
    },
    "mac": {
      "target": "dmg",
      "icon": "public/favicon.ico",
      "identity": null
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Meine Firma - KFZ Fac Pro - Rechnungssystem"
    }
  }
}
